{
    "name": "craftile/php",
    "description": "Craftile PHP Monorepo",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Eldo Magan",
            "email": "magan.eldo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "stillat/blade-parser": "^2.0"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.25",
        "captainhook/plugin-composer": "^5.3",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/phpstan": "^1.0",
        "ramsey/conventional-commits": "^1.6",
        "symplify/monorepo-builder": "^11.0"
    },
    "replace": {
        "craftile/core": "self.version",
        "craftile/laravel": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Craftile\\Core\\": "packages/core/src/",
            "Craftile\\Laravel\\": "packages/laravel/src/"
        },
        "files": [
            "packages/laravel/src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "captainhook/plugin-composer": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "BlockDatastore": "Craftile\\Laravel\\Facades\\BlockDatastore",
                "Craftile": "Craftile\\Laravel\\Facades\\Craftile"
            },
            "providers": [
                "Craftile\\Laravel\\CraftileServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "vendor/bin/captainhook install --force"
        ],
        "format": "pint",
        "test": [
            "pest tests/core",
            "pest tests/laravel"
        ],
        "test:core": "pest tests/core",
        "test:laravel": "pest tests/laravel",
        "analyse": "phpstan analyse",
        "validate-monorepo": "vendor/bin/monorepo-builder validate"
    }
}
