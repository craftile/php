{
    "name": "craftile/laravel",
    "description": "Craftile Laravel Package",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eldo Magan",
            "email": "magan.eldo@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Craftile\\Laravel\\": "src/"
        },
         "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "craftile/core": "self.version",
        "stillat/blade-parser": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/phpstan": "^1.0",
        "orchestra/testbench": "^8.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Craftile\\Laravel\\CraftileServiceProvider"
            ],
            "aliases": {
                "Craftile": "Craftile\\Laravel\\Facades\\Craftile",
                "BlockDatastore": "Craftile\\Laravel\\Facades\\BlockDatastore"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
